<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:orientation="vertical"
    tools:context=".Venue">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Stadium Information"
        android:textColor="#ffcc"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Stadium Name"
                android:padding="3dip"/>
            <TextView
                android:layout_column="2"
                android:text="Venue"
                android:padding="3dip"/>
            <TextView
                android:layout_column="3"
                android:text="Temp"
                android:padding="3dip"/>
            <TextView
                android:layout_column="4"
                android:text="Pitch Info"
                android:padding="3dip"/>
        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:layout_column="1"
                android:padding="3dip"
                android:hint="St Name" />
            <TextView
                android:layout_column="2"
                android:hint="Venue"
                android:padding="3dip"/>
            <TextView
                android:layout_column="3"
                android:hint="Temp"
                android:padding="3dip"/>
            <TextView
                android:layout_column="4"
                android:hint="Pitch Info"
                android:padding="3dip"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Last Two Match Summary"
        android:textColor="#ffcc"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color">
        <TableRow>
            <TextView
                android:layout_width="70dp"
                android:layout_column="2"
                android:padding="3dip"
                android:text="Match1"
                android:textColor="#8bbe1b" />
            <TextView
                android:layout_column="4"
                android:text="Match 2"
                android:textColor="#8bbe1b"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Match Info"
                android:padding="3dip" />
            <TextView
                android:layout_column="2"
                android:text="1st Inning"
                android:padding="3dip" />
            <TextView
                android:layout_column="3"
                android:text="2nd Inning"
                android:padding="3dip" />
            <TextView
                android:layout_column="4"
                android:text="1st Inning"
                android:padding="3dip" />
            <TextView
                android:layout_column="5"
                android:text="2nd Inning"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Score"
                android:padding="3dip" />
            <TextView
                android:layout_column="2"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="3"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="4"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="5"
                android:hint="0/0"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="4s"
                android:padding="3dip" />
            <TextView
                android:layout_column="2"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="3"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="4"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="5"
                android:hint="0/0"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="6s"
                android:padding="3dip" />
            <TextView
                android:layout_column="2"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="3"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="4"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="5"
                android:hint="0/0"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Catches"
                android:padding="3dip" />
            <TextView
                android:layout_column="2"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="3"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="4"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="5"
                android:hint="0/0"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Result"
                android:padding="3dip" />
            <TextView
                android:layout_column="2"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="3"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="4"
                android:hint="0/0"
                android:padding="3dip" />
            <TextView
                android:layout_column="5"
                android:hint="0/0"
                android:padding="3dip" />
        </TableRow>


    </TableLayout>
</LinearLayout>
