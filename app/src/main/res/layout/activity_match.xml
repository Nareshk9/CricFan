<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".Match">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_start_color">

            <TableRow>
                <TextView
                    android:id="@+id/lastmatch"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:text="Last" />

                <TextView
                    android:id="@+id/s_match"
                    android:layout_column="4"
                    android:padding="3dip"
                    android:text="2nd last" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/matchinfo"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Match Info" />

                <TextView
                    android:id="@+id/team1m1"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2m1"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />

                <TextView
                    android:id="@+id/team1m2"
                    android:layout_column="4"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2m2"
                    android:layout_column="5"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/toss"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Toss" />

                <TextView
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />


            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Toss" />
                <TextView
                    android:id="@+id/team1toss"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2toss"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/total_4s"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Total 4s" />

                <TextView
                    android:id="@+id/team1_4s"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_4s"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/total_6s"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Total 6s" />

                <TextView
                    android:id="@+id/team1_6s"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_6s"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/total_extras"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Total Extras" />

                <TextView
                    android:id="@+id/team1_extras"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_extras"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/op_partnership"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Opening Partnership" />

                <TextView
                    android:id="@+id/team1_op_part"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_op_part"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/highest_score"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Highest Score" />

                <TextView
                    android:id="@+id/team1_hscore"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_hscore"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/highest_wkts"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Highest wickets" />
                <TextView
                    android:id="@+id/team1_hwkts"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_hwkts"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/total_catches"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Total Catches" />
                <TextView
                    android:id="@+id/team1_catches"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_catches"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>


            <TableRow>
                <TextView
                    android:id="@+id/result"
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Result" />
                <TextView
                    android:id="@+id/team1_result"
                    android:layout_column="2"
                    android:padding="3dip"
                    android:hint="Team H" />

                <TextView
                    android:id="@+id/team2_result"
                    android:layout_column="3"
                    android:padding="3dip"
                    android:hint="Team V" />
            </TableRow>
            
        </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="294dp"
        android:text="Save Details" />
</RelativeLayout>